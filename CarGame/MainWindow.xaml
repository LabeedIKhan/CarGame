                <Label x:Name="GameOver"  Content=" Game Over" Canvas.Left="226" Canvas.Top="373" Width="266" Height="61"
                       FontSize="40" FontFamily="Verdana" Background="GreenYellow"></Label>
            </Canvas>


        </Border>

    </Grid>
</Window>
